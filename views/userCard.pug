mixin userCard(user={})
 .user
   .user__actions
     .user__action.user__action--edit
       a(href=`/users/${user.email}/edit`)
         button Edit
         h2.title
          a(href=`/user/${user.email}`)
     .user__action.user__action--delete     
       a(href=`/users/${user.email}/delete`)
         button Delete
         h2.title
          a(href=`/user/${user.email}`)